#!/bin/bash
set -ex

if ! which aws > /dev/null; then
  echo "Require `aws` command. exit..."
  exit 1
fi

if aws s3 ls s3://${SOURCE_S3_BUCKET_NAME} > /dev/null 2>&1; then
  aws s3 rb s3://${SOURCE_S3_BUCKET_NAME} --force
fi

if aws s3 ls s3://${DEST_S3_BUCKET_NAME} > /dev/null 2>&1; then
  aws s3 rb s3://${DEST_S3_BUCKET_NAME} --force
fi
